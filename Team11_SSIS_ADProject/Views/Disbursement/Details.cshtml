@model List<Team11_SSIS_ADProject.SSIS.Models.ItemDisbursement>

@{
    ViewBag.Title = "Disbursement Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2>Disbursement Details</h2>
    </div>

    <div class="box-body">

        <table class="datatable table table-bordered hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Requested Quantity</th>
                    <th>Available Quantity</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Item.ItemDescription</td>
                        <td>@item.RequestedQuantity</td>
                        <td>@item.AvailableQuantity</td>
                        <td>@item.Remark</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
