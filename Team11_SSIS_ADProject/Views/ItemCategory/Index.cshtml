@model IEnumerable<Team11_SSIS_ADProject.SSIS.Models.ItemCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("New Category", "Create", "ItemCategory", null, new { @class = "btn btn-primary" })
</p>
<table id="datatable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", "ItemCategory", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "ItemCategory", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#datatable").DataTable()
        });

    </script>


}

