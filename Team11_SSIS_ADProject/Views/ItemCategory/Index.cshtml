@model IEnumerable<Team11_SSIS_ADProject.SSIS.Models.ItemCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h2>Item Categories</h2>
        <p>
            @Html.ActionLink("Add New", "Create", "ItemCategory", null, new { @class = "btn btn-primary" })
        </p>
    </div>

    <div class="box-body">
        <table class="datatable table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@Html.ActionLink("Edit", "Edit", "ItemCategory", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", "ItemCategory", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

