@model Team11_SSIS_ADProject.SSIS.ViewModels.RequisitionViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Requisition Report";
}
<!--form-->
<div class="box box-danger">
    <div class="box-header with-border">
        <h2>Requisition Report</h2>
    </div>
    <div class="box-body">
        <form action="/Report/SearchRequisition" method="get">


            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="startDate">From:</label>
                        <input type="date" name="startDate" id="from" class="form-control" value="" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="endDate">To:</label>
                        <input type="date" name="endDate" id="to" class="form-control" value="" />
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
            <button class="btn bg-navy" type="submit"><i class="glyphicon glyphicon-search"></i> Search</button>
        </form>
    </div>
</div>

@if (Model.GroupedItemRequisitions != null)
{
    <!--Search results-->
    <div class="box box-success">
        <div class="box-header with-border">
            <h4>Search Results</h4>
        </div>
        <div class="box-body">
            <table class="table table-bordered datatable export">
                <thead>
                    <tr>
                        <th>Item Code</th>
                        <th>Item Description</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GroupedItemRequisitions)
                    {
                        <tr>
                            <td>@item.ItemCode</td>
                            <td>@item.ItemDescription</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
}


