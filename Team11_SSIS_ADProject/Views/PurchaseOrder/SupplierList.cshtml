@model Team11_SSIS_ADProject.SSIS.ViewModels.SupplierViewModel
@{
    ViewBag.Title = "Choose Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h2>Choose Supplier</h2>

    </div>
    <div class="box-body">
        <table class="table table-hover table-bordered" id="supplierTable">
            <thead>
                <tr>
                    <th>Supplier Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Suppliers)
                {
                    <tr>
                        <td><button>@Html.ActionLink(item.SupplierName,"PurchaseOrderForm",new { id = item.Id})</button></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
