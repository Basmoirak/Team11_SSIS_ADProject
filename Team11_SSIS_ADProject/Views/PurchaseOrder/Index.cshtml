@model Team11_SSIS_ADProject.SSIS.ViewModels.PurchaseOrderViewModel
@{
    ViewBag.Title = "All PurchaseOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h2>All Purchase Orders</h2>
            <p>
                <a class="btn btn-primary" href="/PurchaseOrder/SupplierList">
                    <i class="glyphicon glyphicon-plus"></i> Create
                </a>
            </p>
        </div>
        <div class="box-body">
            <table class="table table-hover table-bordered" id="purchaseOrderTable">
                <thead>
                    <tr>
                        <th>Created Time</th>
                        <th>Expected Date</th>
                        <th>Supplier</th>
                        <th>Remark</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PurchaseOrders)
                    {
                        <tr>
                            <td>@item.createdDateTime</td>
                            <td>@item.ExpectedDate</td>
                            <td>@item.Supplier.SupplierName</td>
                            <td>@item.Remark</td>
                            <td><a class="btn btn-info" href="@Url.Action("Details", "PurchaseOrder", new { id = item.Id })"><i class="glyphicon glyphicon-eye-open"></i></a></td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
